<!DOCTYPE html>
<title>{{ this.pathName }} | MyCloud</title>
<link rel="stylesheet" href="/bulma.css">
<link rel="stylesheet" href="/font-awesome.min.css">

<div class="container">
    <div class="columns">
        <div class="column is-one-quarter is-offset-one-quarter">
            <h4 class="title is-4">Current directory: {{ this.pathName }}</h4>

            {{#if this.files}}
                {{#each this.files}}
                    <div>
                        {{#if this.isDirectory}}
                            <i class="fa fa-folder"></i>
                        {{else}}
                            <i class="fa fa-file-o"></i>
                        {{/if}}
                        <a href="{{ this.cloudUrlPath }}">{{ this.name }}</a> {{#unless this.isDirectory}}<a href="{{ this.cloudUrlPath }}?download">(download)</a>{{/unless}}
                    </div>
                {{/each}}
            {{else}}
                <p>There are no files in this directory</p>
            {{/if}}
        </div>
        <div class="column is-one-quarter">
            <form>
                Upload a file
                <input type="file" name="file"/>
                <input type="submit" name="action" value="Upload"/>
            </form>
        </div>
    </div>
</div>
