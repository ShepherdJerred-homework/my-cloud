<!DOCTYPE html>
<title>{{ this.pathName }} | MyCloud</title>
<link rel="stylesheet" href="/bulma.css">
<link rel="stylesheet" href="/font-awesome.min.css">

<p>Current directory: {{ this.pathName }}

{{#if this.files}}
    {{#each this.files}}
        <div>
            <a href="{{ this.cloudUrl }}">{{ this.name }}</a>
            {{ this.cloudPath }}<br>
            {{ this.absolutePath }}<br>
            <br><br>
        </div>
    {{/each}}
{{else}}
    <p>There are no files in this directory</p>
{{/if}}

<form>
    Upload a file
    <input type="file" name="file"/>
    <input type="submit" name="action" value="Upload"/>
</form>
